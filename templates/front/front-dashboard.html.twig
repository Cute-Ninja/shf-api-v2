{% trans_default_domain 'front' %}

{% extends 'front/front-base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/front-dashboard.js') }}"></script>
{% endblock %}

{% block title %}{{ parent() }}{{ 'front.dashboard.title'|trans }}{% endblock %}

{% block body %}
    <div class="uk-grid-small" uk-grid>
        <div class="uk-width-1-3@m">
            <div class="uk-card uk-card-default">
                <div id="water-tracker"></div>
            </div>
        </div>

        <div class="uk-width-2-3@m">

            <div class="uk-card uk-card-default">
                <div class="uk-card-body">
                    <ul uk-tab className="uk-tab">
                        <li aria-expanded="true" class="uk-active"><a href="#">Planned</a></li>
                        <li aria-expanded="false"><a href="#">Favorites</a></li>
                    </ul>
                    <div class="uk-switcher">
                        <div id="planned-workouts">
                            Planned
                        </div>
                        <div id="favorite-workouts"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}